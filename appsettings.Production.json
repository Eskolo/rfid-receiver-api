{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Infrastructure": "Warning",
      "Microsoft.AspNetCore.Cors.Infrastructure.CorsService": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "http://127.0.0.1:5500",
      "http://localhost:5500"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=rfiddb;Username=rfiduser;Password=rfidpassword"
  },
  "Rfid": {
    "GraceSeconds": 3,
    "CleanupMinutes": 5,
    "CheckMs": 1000
  },
  "ApiKeys": {
    "RFID": "${RFID_API_KEY}"
  }
}
